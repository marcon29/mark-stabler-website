<section>
	<h1>Add New Social Platform</h1>
</section>

<section>
    <form id="new-platform-form" class="new-edit-form" method="post" action="/social-platforms">
        <h3>Enter Info to Create a New Social Platform</h3>
		<p><label for="name">Name: </label>
			<input id="name" type="text" name="social_platform[name]"></p>
		<p><label for="base_url">Base URL: </label>
			<input id="base_url" type="text" name="social_platform[base_url]"></p>		
		<p><label for="image_file_name">Image File Name: </label>
            <input id="image_file_name" type="text" name="social_platform[image_file_name]"></p>
                
        <p><input type="submit" value="Add Social Platform"></p>
	</form>
</section>