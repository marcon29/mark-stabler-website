<section class="admin-page-headline">
	<h1>User Management</h1>
</section>

<section  class="admin-options-section">
    <h3 class="display-horiz"><a href="/admin/users/new">ADD USER</a></h3>
</section>

<section class="admin-list-objects-section">
    <h2 class="orange-text">All Users</h2>
    <hr>
    <table id="users-table">
        <thead>
            <tr>
                <th class="aqua-text">Username</th>
                <th class="aqua-text">Name</th>
                <th class="aqua-text">Email</th>
                <th class="aqua-text">Date Added</th>
                <th class="aqua-text">Management Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @users.order("username ASC").each do |u| %>
                <tr>
                    <td><%= u.username %></td>
                    <td><%= u.full_name %></td>
                    <td><%= u.email %></td>
                    <td><%= formatted_date(u.created_at) %></td>
                    <td>
                        <form class="crud-button" method="get" action="/admin/users/<%= u.username %>/edit">
                            <input id="edit-<%= u.username %>" type="submit" value="Edit">
                        </form>                
                        <form class="crud-button" method="post" action="/admin/users/<%= u.username %>">
                            <input id="hidden" type="hidden" name="_method" value="delete">
                            <input id="delete-<%= u.username %>" type="submit" value="Delete">
                        </form>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</section>

